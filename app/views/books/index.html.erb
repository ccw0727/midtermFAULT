<h1>Book</h1>
<%= link_to "add book", new_book_path(@book) ,class: "btn btn-primary"%>
<table class= "table table-hover ">

  <thead>
  <tr>
    <td>書名</td>
    <td>簡介</td>
    <td>作者姓名</td>
    <td>售價</td>
  </tr>
  </thead>
   <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %>
        <td><%= book.intro %></td>
        <td><%= book.author %></td>
        <td><%= book.price %></td>
      </tr>
      <% end %>
    </tbody>
 



 </table>